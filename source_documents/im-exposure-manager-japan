<script>
   var isNotIEPage = (window.location.href === "https://acadiainc.webflow.io/ie") ? null : true;
   var isIE = window.navigator.userAgent.match(/MSIE|Trident/) !== null;
   if (isIE && isNotIEPage) {window.location.replace("https://acadiainc.webflow.io/ie");}
</script><script>
(function() {
  $('.case-studies-accordion-item-content').hide();
	$('.case-studies-accordion').each(function() {
    $(this).find('.case-studies-accordion-item-content').first().show();
    $(this).find('.case-studies-accordion-item-title').first().attr('data-open', 'true');
  });
  $('.case-studies-accordion-item-title').click(function(e) {
    e.preventDefault();
    var isOpen = $(this).attr('data-open');
    if (isOpen === 'true') return;
    var $accordion = $(this).parents('.case-studies-accordion');
    $accordion.find('.case-studies-accordion-item-title').attr('data-open', 'false');
    $accordion.find('.case-studies-accordion-item-content').slideUp();
    $(this).next().slideDown();
    $(this).attr('data-open', 'true');
  });
})();
</script>
<script>
const elems = document.querySelectorAll('.workflow-tabs-navigation-item')
elems.forEach(a => a.classList.contains("w--current") ? '' : a.classList.add("pulse"));
</script></body></html>